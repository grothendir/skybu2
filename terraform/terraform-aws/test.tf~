provider "aws" {
  access_key = "${var.access_key}"
  secret_key = "${var.secret_key}"
  region     = "${var.region}"
}

resource "aws_instance" "docker" {
  ami           = "${lookup(var.amis, var.region)}"
  instance_type = "t2.small"
  count = 1
}

resource "aws_instance" "jenkins" {
  ami           = "${lookup(var.amis, var.region)}"
  instance_type = "t2.medium"
  count = 1
}

resource "aws_instance" "gitlab" {
  ami           = "${lookup(var.amis, var.region)}"
  instance_type = "t2.large"
  count = 1
}

resource "aws_key_pair" "admin" {
  key_name = "admin-key"
  # contenu du fichier : ssh-keys/admin-user.pub
  public_key = "ssh-rsa  ulysse@ulysse-HP-ProBook-470-G5"
}

resource "aws_key_pair" "ansible" {
  key_name = "ansible-key"
  # contenu du fichier : ssh-keys/ansible-user.pub
  public_key = "ssh-rsa  ulysse@ulysse-HP-ProBook-470-G5"
}

resource "aws_security_group" "allow_remote_admin" {
  name = "allow_remote_admin"
  description = "allow ssh traffic"

  ingress {
    from_port = 22
    to_port = 22
    protocol = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  
  tags {
    Name = "allow_remote_admin"
  }
}
